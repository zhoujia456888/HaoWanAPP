<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/txt_daily_forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="2016-03-07"
        android:textColor="@color/nliveo_black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_hourly_forecast_txt_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="晴"
        android:textColor="@color/nliveo_black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_hourly_forecast_tmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="16℃—26℃ "
        android:textColor="@color/nliveo_black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_hourly_forecast_winddir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="东南风"
        android:textColor="@color/nliveo_black"
        android:textSize="16dp" />

</LinearLayout>